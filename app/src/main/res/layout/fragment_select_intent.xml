<?xml version="1.0" encoding="utf-8"?>
<com.schiztech.rovers.app.ui.SlideableFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
        <GridView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/gridview"
            android:columnWidth="@dimen/grid_icon_column_width"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:numColumns="auto_fit"
            android:verticalSpacing="@dimen/content_offset_normal"
            android:stretchMode="spacingWidthUniform"
            android:gravity="center"

            />

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone" />

        <TextView
            android:id="@+id/empty_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?android:textAppearanceMedium"
            android:text="@string/list_empty"
            android:layout_gravity="center"
            android:paddingTop="@dimen/content_offset_normal"
            android:visibility="gone" />

        </FrameLayout>
        <Button
            android:id="@+id/button"
            android:visibility="gone"
            style="@style/AppTheme.Button.Flat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             />
    </LinearLayout>
</com.schiztech.rovers.app.ui.SlideableFrameLayout>

