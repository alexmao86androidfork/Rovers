<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:layout_width="@dimen/about_header_height"
                android:layout_height="@dimen/about_header_height"
                android:layout_gravity="center"
                android:src="@drawable/ic_about_thanks"
                android:padding="@dimen/more_thanks_image_padding"
                />


            <TextView
                style="@style/AppTheme.TextAppearance.Title"
                android:id="@+id/thanks_title"
                android:layout_width="match_parent"
                android:layout_height="@dimen/about_header_height"
                android:gravity="center_vertical"
                android:text="@string/about_thanks_title"
                android:singleLine="true"
                android:ellipsize="marquee"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:marqueeRepeatLimit="marquee_forever"
                />


        </LinearLayout>

    </LinearLayout>

