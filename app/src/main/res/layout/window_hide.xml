<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center|top"
    >
    <ImageView
        android:id="@+id/hide_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:src="@drawable/ic_action_cancel_regular"
        android:paddingTop="@dimen/content_offset_normal"
        android:paddingBottom="@dimen/content_offset_normal"
        android:paddingRight="@dimen/content_offset_internal"
        />
    <TextView
        android:id="@+id/hide_label"
        style="@style/AppTheme.TextAppearance.LightWithShadow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text="@string/rovers_hide"
        android:paddingTop="@dimen/content_offset_normal"
        android:paddingBottom="@dimen/content_offset_normal"
        android:textSize="@dimen/text_title"/>
</LinearLayout>